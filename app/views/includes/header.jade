          if (req.isAuthenticated())
            li
              a(href="/users/"+req.user.id, title="Profile")
                i(class='icon-user icon-white')
                |#{lingua.profile}
            li
              a(href="/logout", title="logout")
                i(class='icon-remove icon-white')
                |#{lingua.logout}
          else
            li
              a(href="/login", title="Login") #{lingua.login}
