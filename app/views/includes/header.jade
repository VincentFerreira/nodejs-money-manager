            ul.dropdown-menu(role="menu", arial-labelledby="dLabel")
              li
                a(href="/tour") #{lingua.tour}
              li
                a(href="/news") #{lingua.news}
          if (req.isAuthenticated())
            li
              a(href="/users/"+req.user.id+"/accounts", title="account listing")
                i(class='icon-book icon-white')
